sudo: required
language: generic

services:
  - docker

before_install:
  - docker build -t oldbonedocker/react-test -f ./client/Dockerfile.dev ./client

script:
  - docker run -e CI=true oldbonedocker/react-test npm test

after_success:
  - docker build -t oldbonedocker/multi-client ./client
  - docker build -t oldbonedocker/multi-nginx ./nginx
  - docker build -t oldbonedocker/multi-server ./server
  - docker build -t oldbonedocker/multi-worker ./worker
# Log in to the docker CLI
- echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_ID" --password-stdin
# Take those images and push them to docker hub
- docker push oldbonedocker/multi-client
- docker push oldbonedocker/multi-nginx
- docker push oldbonedocker/multi-server
- docker push oldbonedocker/multi-worker
